# Configurações da API
API_HOST=0.0.0.0
API_PORT=5000
API_DEBUG=True
API_SECRET_KEY=sua_chave_secreta_para_api_key

# Configurações do Telegram
TELEGRAM_API_ID=123456
TELEGRAM_API_HASH=your_api_hash_here
TELEGRAM_PHONE=your_phone_number_here

# Bot Token (opcional, use se estiver criando um bot)
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Diretórios para dados TDLib
TDLIB_DATABASE_DIRECTORY=./tdlib_files/database
TDLIB_FILES_DIRECTORY=./tdlib_files/downloads
TDLIB_LOG_VERBOSITY=2

# Configurações de Webhook
WEBHOOK_ENABLED=true
WEBHOOK_URL=https://your-api-domain.com/webhook
WEBHOOK_EVENTS=message,user,chat
WEBHOOK_SECRET=your_webhook_secret_here

# Configurações de segurança
CORS_ORIGINS=*

# Diretórios para dados
TD_DATABASE_DIRECTORY=./td_db
TD_FILES_DIRECTORY=./td_files

# Configurações de segurança
JWT_SECRET=seu_jwt_secret_muito_seguro
JWT_EXPIRE_MINUTES=1440

# Configurações do MongoDB (opcional)
MONGODB_URL=mongodb://localhost:27017

# Modo DEBUG
DEBUG=false

# Porta da aplicação
PORT=8000

# Diretório de uploads temporários
UPLOAD_FOLDER=/tmp/uploads

# Limites e Configurações
MESSAGE_HISTORY_LIMIT=100
MAX_UPLOAD_SIZE=104857600

# Configurações de Log
LOG_LEVEL=INFO
LOG_FILE=./logs/telegram_api.log 